<view class="container">
  <view>
    设备总数：{{totalCount}}
  </view>
  <view class="table">
      <view class="tr">
          <view class="th grow">名称</view>
          <view class="th w2">状态</view>
      </view>
      <view class="tr" wx:for="{{deviceList}}">
          <!-- <view class="td">{{index+1}}</view> -->
          <view class="td grow">{{item.name}}</view>
          <view class="td w2" wx:if="{{item.status==1}}">
            <icon type="success"></icon>
          </view>
          <view class="td w2" wx:if="{{item.status==0}}">
            <icon type="clear"></icon>
          </view>
      </view>
  </view>
  <infinite-scroll bind:getList="alert" isCompleted='{{deviceList.length===totalCount}}'></infinite-scroll>
</view>