/* pages/deviceManagement/deviceManagement.wxss */

.header {
  width: 690rpx;
  height: 288rpx;
  margin: 0 auto;
  position: relative;
  top: 90rpx;
  border-radius: 10rpx;
  padding-top: 40rpx;
}

.header .grow {
  color: #666;
  font-size: 28rpx;
  justify-content: center;
}

.header .grow .text {
  color: #ff1744;
  font-size: 44rpx;
  position: relative;
  top: -13rpx;
  margin-left: 15rpx;
}

.header .grow .green {
  position: absolute;
  left: -30rpx;
  top: 8rpx;
}

.header .scanTip {
  font-size: 28rpx;
  position: absolute;
  bottom: 50rpx;
  left: 0;
}

.table-bottom {
  height: 1px;
  border-bottom: 1px solid #eee;
  position: relative;
  left: 10%;
}

.table-container {
  padding-left: 15rpx;
  padding-right: 15rpx;
  font-size: 35rpx;
  width: 92%;
}

.table-container image {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
}

.table-container .grow {
  padding-left: 15rpx;
}

.table-item {
  padding-top: 35rpx;
  padding-bottom: 35rpx;
  margin-left: 0;
}

.icon-chevron-right {
  color: #ccc;
  height: 100%;
  margin-left: 20rpx;
  font-size: 42rpx;
}

.point {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
}

.green {
  background: #09bb07;
}

.grey {
  background: #b2b2b2;
}

.search-container {
  background: #eee;
  padding: 15rpx 40rpx;
  font-size: 26rpx;
  border-radius: 12rpx;
}

.search-container view {
  color: #b2b2b2;
  margin-right: 8rpx;
  top: 16rpx;
  position: relative;
  left: -8rpx;
}
