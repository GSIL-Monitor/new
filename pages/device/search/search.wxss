@import "../deviceTabs/deviceTabs.wxss";

.pageTitle {
  font-size: 36rpx;
  color: #fff;
  top: 60rpx;
}

.container {
  padding: 145rpx 0rpx;
}

.searchHead {
  padding-bottom: 30rpx;
  background: #f2f2f2;
}

.search-container {
  margin-top: 50rpx;
  margin-left: 95rpx;
  background: #fff;
  padding: 5rpx 40rpx;
  font-size: 26rpx;
  border-radius: 36rpx;
  position: relative;
  z-index: 10;
}

.search-container view {
  color: #b2b2b2;
  margin-right: 8rpx;
  top: 16rpx;
  position: relative;
  left: -8rpx;
}

.history {
  padding: 180rpx 30rpx 0;
  flex-wrap: wrap;
}

.history view {
  background: #f2f2f2;
  padding: 10rpx 25rpx;
  font-size: 24rpx;
  border-radius: 24rpx;
  margin: 15rpx 15rpx;
}

.container .flex.w10.flex-wrap {
  justify-content: space-between;
  padding-top: 25rpx;
  margin: 0 25rpx;
}

.container .listItem {
  width: 334rpx;
  height: 474rpx;
  border-radius: 15rpx;
  border: 1rpx solid #e2e2e2;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.container .listItem image {
  width: 100%;
  height: 334rpx;
}

.products .title {
  font-size: 28rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.products .tags {
  font-size: 16rpx;
  color: #ff1744;
  margin-top: 15rpx;
}

.products .tags view {
  border: 1rpx solid #ff1744;
  border-radius: 10rpx;
  padding: 0 10rpx;
  margin-right: 10rpx;
}
